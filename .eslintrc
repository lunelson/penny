{
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "plugins": [
    "ava",
    "import",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:ava/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier"
  ],
  "rules": {
    "no-bitwise": [
      "error",
      {
        "allow": [
          "~"
        ]
      }
    ],
    "no-unused-vars": "off",
    "no-console": "off",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          "builtin",
          "external"
        ]
      }
    ],
    "prettier/prettier": [
      "error"
    ]
  }
}
